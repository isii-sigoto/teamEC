<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.internous.team2507.model.mapper.MstProductMapper">

	<select id="findByCategoryAndProductName" resultType="jp.co.internous.team2507.model.domain.MstProduct">
		SELECT 
			image_full_path,
			product_name,
			price,
			id,
			category_id
		FROM 
			mst_product
		<where> 
			category_id = #{category} 
			<if test="keywords != null">
				AND 
				(
				<foreach item='keyword' collection='keywords' separator=' OR '>
	            product_name LIKE CONCAT('%', #{keyword}, '%')
	            </foreach>
	            )
			</if>
         </where>
	</select>
	
	<select id="findByProductName" resultType="jp.co.internous.team2507.model.domain.MstProduct">
		SELECT image_full_path,product_name,price,id
		FROM mst_product
		WHERE
		<foreach item='keyword' collection='keywords' separator=' OR '>
            product_name LIKE CONCAT('%', #{keyword}, '%')
        </foreach>
	</select>
	
</mapper>